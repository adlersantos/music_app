<h1>Edit track</h1>

<form action="<%= album_track_url(@album, @track) %>" method="post">
  <label for="track_name">Name:</label> <br />
  <input type="text" name="track[name]" value="<%= @track.name %>"> <br />

  <label for="track_lyrics">Lyrics:</label> <br />
  <textarea name="track[lyrics]"><%= @track.lyrics %></textarea> <br />

  <label for="track_album"><%= @track.band.name %> albums:</label> <br />
  <select name="track[album_id]" id="track_album">
    <% @album.band.albums.each do |album| %>
      <option value="<%= album.id %>"
        <%= "selected" if @album.id = album.id %>
      >
        <%= album.title %>
      </option>
    <% end %>
  </select> <br /> <br />

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="put">
  <input type="submit" value="Update">
</form>
