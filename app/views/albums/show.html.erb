<h1><%= @album.title %></h1>
<h3>Artist: <%= link_to "#{@album.band.name}", band_url(@album.band) %></h3>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

  <% @tracks.each do |track| %>
    <tr>
      <td>
        <%= link_to "#{track.name}", album_track_url(@album, track), :method => "get" %>
      </td>
      <td><%= link_to "edit", edit_album_track_url(@album, track), :method => "get" %></td>

      <% if current_user.admin == true %>
      <td><%= link_to "delete", album_track_url(@album, track), :method => "delete" %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<br />

<%= link_to "Create new track", new_album_track_url(@album), :method => "get" %>
